<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:maxWidth="1280dp"
    android:minWidth="700dp"
    tools:context="com.example.ivo.calcolator.Extention_Activity">

    <Button
        android:id="@+id/btn0"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/numbers_buttons"
        android:text="sin"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_above="@+id/btn0"
        android:layout_alignStart="@+id/btn0"
        android:background="@drawable/numbers_buttons"
        android:text="tg"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnComma"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btn0"
        android:layout_toEndOf="@+id/btn0"
        android:background="@drawable/numbers_buttons"
        android:text="cos"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn5"
        android:layout_toEndOf="@+id/btn1"
        android:background="@drawable/numbers_buttons"
        android:padding="0dp"
        android:text="cotg"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_above="@+id/btn1"
        android:layout_alignParentStart="true"
        android:background="@drawable/numbers_buttons"
        android:text="("
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:background="@drawable/numbers_buttons"
        android:text=")"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_above="@+id/btn4"
        android:layout_alignParentStart="true"
        android:background="@drawable/numbers_buttons"
        android:text="log"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:background="@drawable/numbers_buttons"
        android:text="lg"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnEarseAll"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_above="@+id/btn7"
        android:layout_alignParentStart="true"
        android:background="@drawable/aciton_buttons"
        android:text="1/X"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnDevision"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/btnEarseAll"
        android:layout_toEndOf="@+id/btnEarseAll"
        android:background="@drawable/aciton_buttons"
        android:text="%"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textMiddleResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnEarseOne"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textMiddleResult"
        android:layout_below="@+id/textMiddleResult"
        android:layout_marginTop="17dp"
        android:textColor="@android:color/background_light"
        android:textSize="50dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_above="@+id/textResult"
        android:layout_alignParentStart="true"
        android:onClick="BackToMainActivity"
        android:background="@color/newActivityButtons"
        android:textColor="@color/newActivitybuttonsText"
        android:textSize="15dp"
        android:text="Back" />


</RelativeLayout>
